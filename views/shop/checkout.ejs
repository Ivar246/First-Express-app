<%- include("../includes/head.ejs") %>
    <link rel="stylesheet" href="/css/cart.css">
    <!-- <link rel="stylesheet" href="/css/checkout.css"> -->
    </head>

    <body>
        <%- include("../includes/navigation.ejs") %>
            <main>
                <ul class="centered">
                    <% products.forEach(prod=>{%>
                        <li>
                            <h1 class="title">
                                <%=prod.productId.title%>
                            </h1>
                            <h2 class="quantity">Quantity: <%=prod.quantity%>
                            </h2>
                        </li>.
                        <%})%>
                </ul>
                <div>
                    <h2>Total: <%=totalSum%>
                    </h2>
                </div>
                <div class="centered">
                    <form action="/create-order" method="POST">
                        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                            data-key="pk_test_i6b537msoXqRsJFwQwCm9tR1" data-amount="<%= totalSum * 100 %>"
                            data-name="Your Order" data-description="All the items you ordewred"
                            data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
                            data-locale="auto" data-currency="usd">
                            </script>
                    </form>
                </div>
            </main>
            <script src="/js/checkout.js"></script>
            <%- include("../includes/end.ejs")%>