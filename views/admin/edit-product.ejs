<%- include("../includes/head.ejs") %>
    <link rel="stylesheet" href="/css/forms.css">

  </head>
  <body>
    <%- include("../includes/navigation.ejs") %>

    <form class="product-form" action="/admin/<% if (editing) {%> edit-product <%} else { %>add-product<%}%>" method="POST">
      <h2>Add Product</h2>
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<% if (editing){%> <%=product.title%><%}%>"/>
        <label for="descrption">Description</label>
        <textarea name="description" rows="5"><% if (editing){%><%=product.description%><%}%></textarea>
        <label for="price">Price</label>
        <input type="number" name="price" value="<% if (editing){%><%=product.price%><%}%>" />
        <label for="imageUrl">Image Url</label>
        <input type="url" name="imageUrl" value="<% if (editing){%><%=product.imgUrl%> <%}%>"/>
      </div>
      <button type="submit"><% if (editing){%> Update Procuct <%} else {%>Add Product<%}%></button>
    </form>
    <%- include("../includes/end.ejs")%>