<main>
  {{#if hasProducts}}

    <div class="grid">
      {{#each prods}}
        <article class="card product-items">
          <header class="card_header">
            <h1 class="product_title">{{this.title}}</h1>
          </header>
          <div class="card_image">
            <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQgCDuC4Al_s-FleQae4_M3LL79MybceL6BeA&usqp=CAU"
              alt=""
            />
          </div>
          <div class="card_content">
            <h2 class="product_price">$45</h2>
            <p class="product_description">This is awsome produccts</p>
          </div>
          <div class="card_actions">
            <button class="btn">Add To cart</button>
          </div>
        </article>
      {{/each}}
    </div>
  {{else}}
    <h1>No products available</h1>
  {{/if}}
</main>