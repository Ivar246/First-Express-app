extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length>0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card_header 
                            h1.product__title #{product.title} 
                        div.card__image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQgCDuC4Al_s-FleQae4_M3LL79MybceL6BeA&usqp=CAU", alt="A book")
                        div.card__content
                            h2.product__price $2.15 
                            p.product_description
                        div.card__actions
                            button.btn Add to Cart
        else 
            h1 No products